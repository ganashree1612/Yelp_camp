<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3 ">
        <form action="/campgrounds" method="post" class="validated-form" enctype="multipart/form-data" >
            <div class="mb-3" >
                <label class="form-group" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="valid-feedback">
                Great
            </div>
            <div class="mb-3">
                <label class="form-label"  for="location">location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
            </div>
            <!-- <input type="files" name="image" id="image" multiple> -->
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="image">Upload Images</label>
                <input type="file" class="form-control" name="image" id="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0" aria-describedby="price-label" name="campground[price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
            </div>
            <button class="btn btn-success mb-3"  type="submit">add campground</button>
        </form>
        <a href="/campgrounds">all campgrounds</a>

    </div>
</div>
