<% layout('layouts/boilerplate')%>
<h1>All Campgrounds</h1>
    <div class="mb-3" >
        <button onMouseover="this.style.color='blue'" class="btn-" style="background-color: rgb(13, 10, 99); "><a href="/campgrounds/new" style="text-decoration: none; color: rgb(247, 247, 247);" >add a campground</a></button>
    </div>
    
        <% for (let camp of campgrounds){%>
    <div class="card" mb-3>
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= camp.image %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"></h5>
                    <%= camp.title %>
                    <p class="card-text"><%= camp.description %></p>
                    <small class="text-secondary"><%= camp.location%></small>
                <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%= camp.title%></a>
            </div>
        </div>
    </div>
    <%}%>

